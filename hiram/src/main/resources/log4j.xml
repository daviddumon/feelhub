<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://dev.tiron.fr/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="hiram" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="threshold" value="info"/>
        <rollingPolicy name="file" class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/hiram/logs/hiram.log.%d{yyyy-MM-dd}.gz"/>
            <param name="ActiveFileName" value="/hiram/logs/hiram.log"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="HIRAM> %d [%5p] (%c) %m%n"/>
        </layout>
    </appender>
    <appender name="errors" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="threshold" value="error"/>
        <rollingPolicy name="file" class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/hiram/logs/error.log.%d{yyyy-MM-dd}.gz"/>
            <param name="ActiveFileName" value="/hiram/logs/error.log"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="HIRAM> %d [%5p] (%c) %m%n"/>
        </layout>
    </appender>
    <appender name="requests" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="threshold" value="info"/>
        <rollingPolicy name="file" class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/hiram/logs/requests.log.%d{yyyy-MM-dd}.gz"/>
            <param name="ActiveFileName" value="/hiram/logs/requests.log"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="HIRAM> %d [%5p] (%c) %m%n"/>
        </layout>
    </appender>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="MAPPER>%d [%5p] (%c) %m%n"/>
        </layout>
    </appender>
    <logger name="org.apache">
        <level value="error"/>
    </logger>
    <logger name="com.bytedojo.web.RequestLogger">
        <level value="info"/>
        <appender-ref ref="requests"/>
    </logger>
    <root>
        <level value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="hiram"/>
        <appender-ref ref="errors"/>
    </root>
</log4j:configuration>